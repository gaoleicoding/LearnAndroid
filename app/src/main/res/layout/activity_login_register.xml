<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical"
    skin:enable="true">

    <com.android.learn.base.view.TitleView
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/account"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                skin:enable="true" />

            <EditText
                android:id="@+id/et_login_phone_num"
                style="@style/edit_match_style"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                skin:enable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/password"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                skin:enable="true" />

            <EditText
                android:id="@+id/et_login_password"
                style="@style/edit_match_style"
                android:inputType="textPassword"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                skin:enable="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            style="@style/btn_selector_match_style"
            android:text="@string/login"
            skin:enable="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/register"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                skin:enable="true" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:background="@color/activity_bg_color"
        android:orientation="vertical"
        skin:enable="true"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_register_phone_num"
            style="@style/edit_match_style"
            android:hint="@string/phone_account"
            android:inputType="number"
            skin:enable="true"/>

        <EditText
            android:id="@+id/et_register_password"
            style="@style/edit_match_style"
            android:hint="@string/password"
            android:inputType="textPassword"
            skin:enable="true"/>

        <EditText
            android:id="@+id/et_register_confirm_password"
            style="@style/edit_match_style"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            skin:enable="true"/>

        <TextView
            android:id="@+id/tv_register"
            style="@style/btn_selector_match_style"
            android:text="@string/register"
            skin:enable="true"/>

    </LinearLayout>


</RelativeLayout>
