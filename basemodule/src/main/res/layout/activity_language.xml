<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical"
    skin:enable="true">

    <com.android.base.view.TitleView
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        style="@style/user_info_layout"
        android:orientation="horizontal"
        skin:enable="true">


        <TextView
            style="@style/user_info_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/language_follow_system"
            skin:enable="true" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/abc_btn_check_material"
            android:buttonTint="@color/colorAccent" />
    </LinearLayout>
    <View
        style="@style/horizontal_divider_setting"
        skin:enable="true" />

    <LinearLayout
        style="@style/user_info_layout"
        android:orientation="horizontal"
        skin:enable="true">

        <TextView
            style="@style/user_info_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/language_chinese"
            skin:enable="true" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/abc_btn_check_material"
            android:buttonTint="@color/colorAccent" />
    </LinearLayout>
    <View
        style="@style/horizontal_divider_setting"
        skin:enable="true" />

    <LinearLayout
        style="@style/user_info_layout"
        android:orientation="horizontal"
        skin:enable="true">

        <TextView
            style="@style/user_info_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/language_english"
            skin:enable="true" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/abc_btn_check_material"
            android:buttonTint="@color/colorAccent" />
    </LinearLayout>
    <View
        style="@style/horizontal_divider_setting"
        skin:enable="true" />
</LinearLayout>